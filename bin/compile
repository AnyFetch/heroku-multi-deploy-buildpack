#!/bin/bash

# Get env
build_dir=$1
env_dir=$3
env_variables=""
blacklist_regex='^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    echo "$e" | grep -qvE "$blacklist_regex" && export "$e=$(cat $env_dir/$e)"
    echo "$e" | grep -qvE "$blacklist_regex" && env_variables+="$e=$(cat $env_dir/$e) "
  done
fi

echo "LS"
ls $1

pwd
ls ./


if [[ "${NAME:$i:1}" =~ [0-9] ]]; then
  exit 0
else
  for i in $(seq 2 $NUM_INSTANCES);do
    git push heroku$i master
    $build_dir/vendor/heroku-toolbelt/bin/heroku config:set $env_variables --app $NAME$i
  done

  cd ..
  rm -rf $NAME
fi
