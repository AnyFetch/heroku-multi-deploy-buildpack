#!/bin/bash

# Get env
env_dir=$1
echo "ENV_DIR=$env_dir"
env_variables=""
if [ -d "$env_dir" ]; then
  echo "Getting heroku env..."
  for e in `ls $env_dir`; do
    echo "$e"
    export "$e=$(cat $env_dir/$e)" && echo "$e=$(cat $env_dir/$e)"
    env_variables+="$e=$(cat $env_dir/$e) "
  done
fi


echo "ENV"
printenv

if [[ "${NAME:$i:1}" =~ [0-9] ]]; then
  exit 0
else
  echo "GITHUB:$GIT_REPO"
  git clone $GIT_REPO
  cd $GIT_REPO

  for i in {2..$NUM_INSTANCES}
  do
  	git remote add heroku$i git@heroku.com:$NAME.git
  	git push heroku$i master
  	vendor/heroku-toolbelt/bin/heroku config:set $env_variables --app $NAME$i
  done

  cd ..
  rm -rf $NAME
fi
